<div style="margin-top: 100px;">
    <h1>Comments</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Owner</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {{!-- TO DO IT DYNAMICALLY --}}
            {{#each comments}}
            <tr>
                <td>{{id}}</td>
                <td>{{user.firstName}}</td>
                <td><input data-id= "{{id}}" type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
                <td>{{generateTime date 'MMMM Do YYYY' }}</td>
                <td>
                    <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </td>
            </tr>
            
            {{/each}}

        </tbody>
    </table>
</div>